<h1 class="title">Battle City</h1>
<div class="divider"></div>

<div id="room_container" class="room-container row">
  <div class="new-game-card col s12 m4 l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <input disabled id="new_room_name" type="text" class="validate"/>
                <label for="new_room_name" class="active">Room Name</label>
              </div>
            </div>
            <button class="waves-effect waves-light btn join-button" type="submit">
              New game
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- New player name modal -->
<div id="player_name_modal" class="modal">
  <div class="modal-content">
    <h4>Player name</h4>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input id="new_player_name" type="text" class="validate"/>
            <label for="new_player_name">Player name</label>
          </div>
        </div>
        <div class="modal-footer">
          <button id="new_player_name_button" class="modal-close waves-effect waves-light btn">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  window.existing_game_template = (
    `<div
      class="existing-game-card col s12 m4 l3"
      data-room=""
    >
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <div class="card-title room"></div>
          <div class="card-title level"></div>
          <div class="card-title player"></div>
        </div>
        <div class="card-action">
          <a class="waves-effect waves-light btn join-button" href="#">Join</a>
        </div>
      </div>
    </div>`
  );
</script>